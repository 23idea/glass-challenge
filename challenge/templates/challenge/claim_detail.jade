extends challenge/base.jade

block content
  h2 Content
  div= claim.content 
  h2 Author
  div
    a(href="{% url 'user' claim.author.id %}")= claim.author
  h2 Status
  div= claim.status
  h2 Challenge
  a(href="{% url 'challenge_details' claim.challenge.id %}")= claim.challenge.title
  br
  if user.id == claim.author.id
    a(href="{% url 'claim_edit' claim.id %}") Edit
